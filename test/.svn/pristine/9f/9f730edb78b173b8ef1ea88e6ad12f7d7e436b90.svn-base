@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_loggedin.cshtml";
}

<h2>Rest Your Password</h2>

<div class="row-fluid">
    
    @using (Html.BeginForm("ChangePassword", "profile", FormMethod.Post, new { enctype = "multipart/form-data", id = "ChangePasswordForm" }))
    {
        <div>
            <div>
                <span>Enter New Password</span>
                <div>
                    <input type="text" placeholder="Type New Password"/>
                </div>
            </div>
            <div>
                <span>Retype New Password</span>
                <div>
                    <input type="text" placeholder="Retype New password"/>
                </div>
            </div>
            <div>
                <div>
                    <input type="submit" value="Reset Password" />
                </div>
            </div>
        </div>
    }

</div>