<div class="contactalerts">

    <div id="contactdesignationempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>Specify the Designation Of the Contact</span>
        </div>
    </div>
    <div id="contactcompanynameempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>Please Enter the contact company name</span>
        </div>
    </div>
    <div id="contactfirstnameempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>Contact first name cannot be empty</span>
        </div>
    </div>
    <div id="contactlastnameempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>Contact last name cannot be empty</span>
        </div>
    </div>

    <div id="contactworkphoneempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>Please provide the Work Phone of the Contact</span>
        </div>
    </div>
    <div id="contactmobilephoneempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>Please provide the mobile phone of the contact</span>
        </div>
    </div>



    <div id="contactemailempty" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>contact Email cannot be Empty</span>
        </div>
    </div>

    <div id="contactemailinvalid" class="alert alert-block alert-error fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>contact  Email is not Valid</span>
        </div>
    </div>

    <div id="contactaddedsuccessfully action-success" class="alert alert-block alert-success fade in hide">
        <button type="button" class="alertclose">×</button>
        <div>
            <span>New contact Added Succesfully</span>
        </div>
    </div>

</div>
