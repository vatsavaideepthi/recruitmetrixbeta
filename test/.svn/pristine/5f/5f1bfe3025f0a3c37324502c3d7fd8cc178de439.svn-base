@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_JobPortalMasterView.cshtml";
}


<div style="clear: both;">
    <div class="pull-left">
        <span class="pageheader">Create Mailing List</span>
    </div>
    <div class="pull-right">
        <a href="/lists" class="btn btn-info btn-grey btn-flat">View Mailing Lists</a>
    </div>
</div>
<legend style="padding-top: 20px;"></legend>
<div class="row">
    <div class="span8">
        <span id="mailimport-activator" class="btn btn-info btn-grey btn-flat">Import Mail Addresses</span>
    </div>

    <div id="mailimport-box" class="hide">
        <span id="mailaddressimporterproxy" class="btn btn-info btn-green btn-flat"><span>Browse</span><span id="addedfilename">No File Added</span></span>
        <input type="file" id="mailaddressimporter" class="hide" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
        @*<input type="file" id="mailaddressimporter" class="hide" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel,text/comma-separated-values, text/csv, application/csv"/>*@
        <script>
            $(document).ready(function () {

                $('#mailimport-activator').click(function () {
                    $('#mailimport-box').show();
                });


                $('#mailaddressimporterproxy').click(function () {
                    $('#mailaddressimporter').click();
                });

                $("#mailaddressimporter").change(function () {
                    var fileName = $('input[type=file]').val().replace(/.*(\/|\\)/, '');
                    var clean = fileName.split('\\').pop(); // clean from C:\fakepath OR C:\fake_path 
                    $('#addedfilename').text(clean);
                });
            });
        </script>
    </div>

    <div>
        @using (Html.BeginForm("create", "lists", FormMethod.Post, new { style = "clear:both;" }))
        {
            <div>
                <input id="newmaillistname" type="text" placeholder="Enter Mailing List Name" />
            </div>
            <div>
                <ul>
                    <li>
                        <div>
                            <span>Sample mail Address</span>
                        </div>
                    </li>
                </ul>
            </div>
            <input type="hidden" id="maildata" />
            <div>
                <span class="btn btn-green btn-info btn-flat hide" >Create Mailing List</span>
                <input type="submit" class="btn btn-green btn-info btn-flat hide" value="Create List" />
            </div>
        }
    </div>

</div>



