@model List<UI.Models.CustomerModel.CustomerData>
@{
    Layout = "~/Views/Shared/_loggedin.cshtml";
    ViewBag.Title = "Customers";
}

@section topbarmenu{
    <div class="">
        <div class="">
            <ul class="nav nav-pills">
                <li class="">
                    <a href="/invoice">All Invoices</a>
                </li>
                <li class="">
                    <a href="/invoice/outbound">Outgoing Invoices</a>
                </li>
                <li class="">
                    <a href="/invoice/inbound">Incoming Invoices</a>
                </li>
                <li class="">
                    <a href="/invoice/create">Create Invoice</a>
                </li>
                <li class="active">
                    <a href="/Customer">Customers</a>
                </li>
            </ul>
        </div>
    </div>
}



<div class="navbar navbar-inverse" style="margin: 25px 0px;">
    <div class="navbar-inner">
        <div>
            <ul class="nav">
                <li style="color: white;">
                    <h4>Customers</h4>
                </li>
            </ul>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="customer invoice">
            <th></th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>View</th>
        </tr>

    </thead>

    @if (Model != null && Model.Count > 0)
    {
        foreach (UI.Models.CustomerModel.CustomerData inv in Model)
        {
                    
        <tr class="customer invoice">

            <td>
                <input type="checkbox" data-customerid="@inv.customer.id"/></td>
            <td>@Html.ActionLink(inv.customer.name, "view", "customer", new { cid = inv.customer.id, aid = inv.address.id, conid = inv.contact.id }, new { id = "" })</td>
            <td>@inv.contact.email</td>
            <td>@inv.contact.mobile</td>

            <td>@Html.ActionLink("Create Invoice", "create", "invoice", new { cid = inv.customer.id }, new { id = "" })</td>
            <td>@Html.ActionLink("Remove Customer", "remove", "customer", new { cid = inv.customer.id }, new { id = "" })</td>
        </tr>
        }
    }
    else
    {
        <tr>
            <td>
                <div>
                    <h1>You Have Customers </h1>
                    <h4><a href="#">Create Customer</a></h4>
                </div>
            </td>
        </tr>
    }
</table>

