@model UI.Models.LoginModel.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign In</title>@* @Styles.Render("~/css/css")*@
    <!-- Description -->
    <meta name="description" content="Track Your Expenses.">
    <meta name="keywords" content="#" />
    <!-- IE FIX -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Views -->
    <meta name="viewport" content="initial-scale=1.0">
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <!--Jquery Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tracker/PaymentTrackerData.js"></script>
    <!--Custom Scripts -->

    <script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/tracker/utilities.js"></script>
    <script src="~/Scripts/tracker/login.js"></script>
    <!--Jquery Styles -->
    <link href="~/css/tracker/jobportal.css" rel="stylesheet" />
    <link href="/Content/themes/base/jquery.ui.theme.css" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/smoothness/jquery-ui-1.10.3.custom.css" rel="stylesheet" type="text/css" media="all" />

    <!-- Bootstrap Styles-->
    <link href="/css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="/css/bootstrap-responsive.css" rel="stylesheet" media="screen">
</head>
<body>
    <article class="marketing-wrapper">

        <header class="navbar" id="static-header">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <div class="row-fluid" id="sub-header">
                        <div class="container-fluid" style="float: left;">
                            <h3>Login</h3>
                        </div>
                        <div class="span4" style="float: right; margin-top: 10px">
                            @*<ul class="nav">
                                <li class="showlogin active"><h4><span>Login</span></h4></li>
                               
                            </ul>*@
                        </div>
                    </div>

                </div>
            </div>
        </header>

        <div class="bgholder">
            <div class="container-fluid" id="login-page">
                <div class="row-fluid">

                    <div class="span4 offset7" id="login-form">


                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "UserLoginForm" }))
                        {
                            <div>
                                <div class="alert alert-error hide" id="LVE001">Enter Valid Email.</div>
                                <div class="alert alert-error hide" id="LVE002">Email Cannot be Empty</div>
                                <div class="alert alert-error hide" id="LVE003">Password Cannot be Empty</div>
                                @if (Model != null && !Model.isLoginValid)
                                {
                                    
                                    <div class="alert alert-error" id="E-MC007" style="display: block;">Invalid email address or password.</div>
                                }
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="">Email:</label>
                                <div class="controls ">
                                    @Html.TextBoxFor(m => m.userEmail, new { @class = "input-text", name = "email", id = "email", placeholder = "Enter Your Email ID",autocomplete="off" })
                            </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="">Password:</label>
                                <div class="controls">
                                    @Html.PasswordFor(m => m.password, new { @class = "input-text", name = "password", id = "password", placeholder = "Enter password", autocomplete="off" })
                                    <br />
                                    @*   <small><a href="#">forgot password?</a></small>*@
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls"  >
                                    <input id="userlogin" type="submit" value="Log in" style="width:223px"  class="btn btn-primary btn-flat btn-wide" />
                                   
                                </div>
                                <div style="padding:5px 2px;width:223px;text-align:center;">
                                  <span class="showsignup" ><a id="" href="/signup">Click here to Signup</a></span>
                                    </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="push"></div>
            </div>
        </div>
    </article>
    <div id="marketing-footer">
        <footer class="container-fluid">
        </footer>
    </div>
      <script type="text/javascript">
          $(document).ready(function () {
              $('#email').focus();
             
              });
      </script>
</body>
</html>
